# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://username:password@localhost:5432/ideaflow_db?schema=public"

# ============================================
# NEXTAUTH CONFIGURATION
# ============================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-generate-with-openssl-rand-base64-32"

# ============================================
# KIMI AI API (Server-side Only)
# ============================================
KIMI_API_KEY="your-kimi-api-key-here"
KIMI_API_URL="https://api.kimi.ai/v1/chat/completions"
KIMI_MODEL="moonshot-v1-8k"

# ============================================
# RATE LIMITING
# ============================================
AI_RATE_LIMIT_PER_USER=50  # Requests per day
AI_RATE_LIMIT_WINDOW=86400  # 24 hours in seconds

# ============================================
# ADMIN CREDENTIALS (First Admin)
# ============================================
ADMIN_EMAIL="admin@ideaflow.ai"
ADMIN_PASSWORD="change-this-password"

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV="development"
